<Window x:Class="WpfPanel.View.Components.EditPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:WpfPanel.View.Components" 
        xmlns:componentsvm="clr-namespace:WpfPanel.ViewModel.ComponentsVM" 
        d:DataContext="{d:DesignInstance Type=componentsvm:EditPanelVM}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="600" Width="600">
    <Window.Resources>
        <Style x:Key="ArrowButton" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:ElementsCard 
            Grid.Column="0"
            Header="Apartment elements"
            Elements="{Binding ApartmentElements}"
            AddElementCommand="{Binding AddApartmentElement}"
            RemoveElementCommand="{Binding RemoveApartmentElement}"
            SelectedElement="{Binding SelectedApartmentElement, Mode=TwoWay}"
            EditBtnVisibility="{x:Static Visibility.Collapsed}"
            ></local:ElementsCard>
        <StackPanel Grid.Column="1" Margin="0 20 0 0">
            <Button Content="Test" Width="30" Click="Button_Click"/>
            <Button Style="{StaticResource ArrowButton}">
                <Image Source="/Resources/icons8-AddArrow-24.png" />
            </Button>
            <Button Style="{StaticResource ArrowButton}">
                <Image Source="/Resources/icons8-RemoveArrow-24.png" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <local:ElementsCard             
                Header="Panel circuits"                
                Elements="{Binding CircuitElementsDictionary}"
                AddElementCommand="{Binding AddPanelCircuit}"
                EditElementCommand="{Binding EditPanelCircuit}"
                RemoveElementCommand="{Binding RemovePanelCircuit}"
                SelectedElementsCommand="{Binding SelectedCircuitsCommand}"
            />
            <TextBox Text="{Binding NewCircuit}" Width="30" Margin="0 0 100 0"/>
        </StackPanel>
        <!--<local:ElementsCard 
                Grid.Column="3"
                Header="Circuit elements"
                Elements="{Binding CircuitElements}"
                AddBtnVisibility="{x:Static Visibility.Collapsed}"
                EditBtnVisibility="{x:Static Visibility.Collapsed}"
                RemoveBtnVisibility="{x:Static Visibility.Collapsed}"
                SelectedElement="{Binding SelectedCircuitElement}"
                SelectedElementsCommand="{Binding SelectedCircuitsCommand}"
            />-->

        <GroupBox Grid.Column="3" Header="Key">
            <ListView ItemsSource="{Binding CircuitElementsDictionary}"
                x:Name="KeysListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Key}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>
        <GroupBox Grid.Column="4" Header="Value">
            <ListView DataContext="{Binding SelectedItem, ElementName=KeysListView}"                      
                      ItemsSource="{Binding Value}" x:Name="KeysListView2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

    </Grid>
</Window>
