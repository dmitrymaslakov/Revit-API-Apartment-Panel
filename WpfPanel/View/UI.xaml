<Window x:Class="WpfPanel.View.UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:WpfPanel" 
        xmlns:viewmodel="clr-namespace:WpfPanel.ViewModel" 
        mc:Ignorable="d" 
        d:DesignHeight="350" d:DesignWidth="300" Height="750" Width="300">
    <Window.Resources>
        <Style x:Key="circuitButton" TargetType="Button">
            <Setter Property="Width" Value="20"/>
        </Style>
        <Style x:Key="circuitTextBlock" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 100 0"/>
        </Style>
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" ItemsSource="{Binding Circuits}" Name="ApartmentCircuits">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Number}" 
                                   x:Name="circuitNumber"
                                   Style="{StaticResource circuitTextBlock}"/>
                        <ListView ItemsSource="{Binding ApartmentElements}" Name="ApartmentElements" >
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Button 
                                        Content="{Binding}" 
                                        Tag="{Binding Text, ElementName=circuitNumber}"
                                        Command="{Binding DataContext.InsertElementCommand,
                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                        Style="{StaticResource circuitButton}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="3" 
                Command="{Binding Configure}"
                Content="Config" 
                Width="50" 
                HorizontalAlignment="Right" 
                Margin="0 0 40 0" />
    </Grid>
</Window>
